<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:orientation="vertical"
        android:padding="@dimen/dp_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivProductImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:scaleType="fitCenter"
            android:translationZ="@dimen/dp_8"
            app:layout_constraintBottom_toTopOf="@id/cvCharacterInfo"
            app:layout_constraintEnd_toEndOf="@id/cvCharacterInfo"
            app:layout_constraintStart_toStartOf="@id/cvCharacterInfo"
            app:layout_constraintTop_toTopOf="@+id/cvCharacterInfo"
            tools:src="@drawable/ic_image_placeholder" />

        <com.example.product360view.marcinmoskala.arcseekbar.ArcSeekBar
            android:id="@+id/sbImgRotation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            app:progressBackgroundColor="@color/mirage_less_opacity"
            app:progressBackgroundWidth="2dp"
            app:progressWidth="2dp"
            android:rotationX="180"
            app:thumb="@drawable/thumb_style"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>