<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GaugeSeekBar">
        <attr name="startAngleDegrees" format="float" />
        <attr name="thumbRadius" format="dimension" />
        <attr name="thumbDrawable" format="reference" />
        <attr name="showThumb" format="boolean" />
        <attr name="isThumbOutside" format="boolean" />
        <attr name="thumbColor" format="color" />
        <attr name="trackGradient" format="color" />
        <attr name="showProgress" format="boolean" />
        <attr name="trackGradientPositions" format="reference" />
        <attr name="progress" format="float" />
        <attr name="interactive" format="boolean" />
        <attr name="trackWidth" format="dimension" />
        <attr name="progressWidth" format="dimension" />
        <attr name="progressGradient" format="reference" />
        <attr name="progressGradientPositions" format="reference" />
    </declare-styleable>

    <declare-styleable name="SegmentedArc">
        <attr name="start_progress" format="integer" />
        <attr name="progress_primary_color" format="color" />
        <attr name="progress_primary_disable_color" format="color" />
        <attr name="progress_secondary_color" format="color" />
        <attr name="progress_secondary_disable_color" format="color" />
        <attr name="progress_primary_circle_size" format="float" />
        <attr name="progress_secondary_circle_size" format="float" />
        <attr name="progress_primary_stroke_width" format="float" />
        <attr name="progress_secondary_stroke_width" format="float" />
        <attr name="sweep_angle" format="integer" />
        <attr name="start_offset" format="integer" />
        <attr name="max" format="integer" />
        <attr name="min" format="integer" />
        <attr name="progress_radius" format="float" />
    </declare-styleable>
</resources>