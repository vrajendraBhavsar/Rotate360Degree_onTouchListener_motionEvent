<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mirage"
    tools:context=".ui.ProductDetailFragment">

    <include
        android:id="@+id/tbProductDetails"
        layout="@layout/custom_toolbar" />

<!--    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glMiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />-->

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvCharacterInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_80"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardElevation="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivProductImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:scaleType="fitCenter"
                android:translationZ="@dimen/dp_8"
                app:imageUrl="@{character.image}"
                app:layout_constraintBottom_toTopOf="@id/cvCharacterInfo"
                app:layout_constraintEnd_toEndOf="@id/cvCharacterInfo"
                app:layout_constraintStart_toStartOf="@id/cvCharacterInfo"
                app:layout_constraintTop_toTopOf="@+id/cvCharacterInfo"
                tools:src="@drawable/ic_car_product" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvProductName"
                style="@style/TextRobotoBold22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:textColor="@color/text_description"
                tools:text="koenigsegg" />

<!--            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCharacterSpecies"
                style="@style/TextRobotoBold22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_16"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text_description"
                tools:text="Human" />-->

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvProductDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_16"
                android:text="@string/text_bottle_description"
                android:textColor="@color/text_description" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>