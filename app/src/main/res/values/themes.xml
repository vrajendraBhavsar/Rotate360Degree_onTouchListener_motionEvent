<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.360degreeRotateImage" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Header text style -->
    <style name="HeaderTextStyle">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="HeaderTextStyle.Bold" parent="HeaderTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--Base Robot Black-->
    <style name="BaseRobotoBlack">
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>

    <!--Base Robot Black Italic-->
    <style name="BaseRobotoBlackItalic">
        <item name="android:fontFamily">@font/roboto_black_italic</item>
    </style>

    <!--Base Robot Bold-->
    <style name="BaseRobotoBold">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <!--Base Robot Bold Italic-->
    <style name="BaseRobotoBoldItalic">
        <item name="android:fontFamily">@font/roboto_bold_italic</item>
    </style>

    <!--Base Robot Italic-->
    <style name="BaseRobotoItalic">
        <item name="android:fontFamily">@font/roboto_italic</item>
    </style>

    <!--Base Robot Light-->
    <style name="BaseRobotoLight">
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <!--Base Robot Light Italic-->
    <style name="BaseRobotoLightItalic">
        <item name="android:fontFamily">@font/roboto_light_italic</item>
    </style>

    <!--Base Robot Medium-->
    <style name="BaseRobotoMedium">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <!--Base Robot Medium Italic-->
    <style name="BaseRobotoMediumItalic">
        <item name="android:fontFamily">@font/roboto_medium_italic</item>
    </style>

    <!--Base Robot Regular-->
    <style name="BaseRobotoRegular">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!--Base Robot Thin-->
    <style name="BaseRobotoThin">
        <item name="android:fontFamily">@font/roboto_thin</item>
    </style>

    <!--Base Robot Thin Italic-->
    <style name="BaseRobotoThinItalic">
        <item name="android:fontFamily">@font/roboto_thin_italic</item>
    </style>

    <style name="TextRobotoBold16" parent="BaseRobotoBold">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="TextRobotoBold18" parent="BaseRobotoBold">
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="TextRobotoBold20" parent="BaseRobotoBold">
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <style name="TextRobotoBold22" parent="BaseRobotoBold">
        <item name="android:textSize">@dimen/sp_22</item>
    </style>

    <style name="TextRobotoBold40" parent="BaseRobotoBold">
        <item name="android:textSize">@dimen/sp_40</item>
    </style>

    <style name="BaseBorderedEditText">
        <item name="android:background">@drawable/shape_rounded_white_bordered_box</item>
    </style>

    <style name="BaseSolidButtonRobotoBold16">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:background">@drawable/shape_rounded_gray_solid_box</item>
    </style>

    <style name="textTitle" parent="BaseRobotoBlack">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>